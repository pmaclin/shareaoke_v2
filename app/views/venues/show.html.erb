<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Venue #<%= @venue.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @venue.name %></dd>

              <dt>Address</dt>
              <dd><%= @venue.address %></dd>

              <dt>City</dt>
              <dd><%= @venue.city %></dd>

              <dt>Description</dt>
              <dd><%= @venue.description %></dd>

<!--               <dt>User</dt>
              <dd><%= @venue.user %></dd> -->
            </dl>
          <% if current_user.present? %>
          <hr>
          <!-- Ask CHECKINS if there's a row where current_user.id exists and the checkin.is_checked_in value == "true". If that row exists than this user must not be able to checkin to any other location. -->
          <!-- Add a button to Check Out of a location. This simply sets the checkin.is_checked_in value == "false" -->
            <div align="center">
              <strong>Check in at </strong> <%= @venue.name %> <%= link_to icon('check'), new_checkin_path( :venue_id => params[:id] ), class: "btn btn-lg btn-success" %>
              <%#= link_to icon('chevron-left'), venues_path, class: "btn btn-primary" %>

              <%#= link_to icon('edit'), edit_venue_path(@venue), class: "btn btn-warning" %>

              <%#= link_to icon('trash-o'), @venue, method: :delete, data: { confirm: "Do you really want to delete this venue?" }, class: "btn btn-danger" %>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
