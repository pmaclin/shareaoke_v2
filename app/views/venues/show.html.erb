                        <%= request.user.stagename %> requested <%= request.song.try(:title) %>
                      </dt>
                    </li>
                  <%# end %> <!-- end if -->
              </ul>
                <% end %> <!-- end do -->
          <!-- </div> --> <!-- end col -->
        </div> <!-- end row -->
      </div>  <!-- end panel body -->
    </div> <!-- end panel panel-default -->

