<%= simple_form_for(@venue) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :image, required: false, hint: "Upload your bar logo or design" %>
    <%= f.hidden_field :image_cache %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :description %>
    <%#= f.hidden_field :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

