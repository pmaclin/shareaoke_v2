<%= simple_form_for(@review) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :headline, maxlength: 36,  hint: "Create a short headline for this review." %>
    <%#= f.input :content, hint: "Add some content about the performance." %>
    <%= f.input :rating, collection: 1..5, hint: "Hint: '6' is off the hook; '1' is drop the mic...you shouldn't be holdin' it." %>
    <%#= f.input :user_id %>
    <%= f.hidden_field :performance_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
