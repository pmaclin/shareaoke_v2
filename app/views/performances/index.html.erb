<div class="row isotope-container">
<% @performances.each do |performance| %>
  <div class="col-xs-12 col-sm-12 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Performance #<%= performance.id %></h3>
      </div>
      <div class="panel-body">
        <dl>
        <% if performance.completed == false %>

          <!-- <dt>Completed?: <%= performance.completed %></dt> -->
          <!-- <dd><%= performance.completed %></dd> -->

          <dt>Performer</dt>
          <dd><%= performance.user.stagename %></dd>

          <dd><%= image_tag performance.user.avatar, :height => '50px', :width => '50px', :class => 'img-square' %></dd>

          <dt>Song</dt>
          <dd>"<%= performance.song.title %>", originally performed by <%= performance.song.artist %></dd>

          <dt>Venue</dt>
          <dd><%= performance.venue %></dd>

          <dt>Comment</dt>
          <dd><%= performance.comment %></dd>

          <dt>Rating</dt>
          <dd><%= performance.rating %></dd>
        <% else %>
        <dt align="center">This Performermance is complete.</dt>
        <dd align="center"><%= performance.user.stagename %> has already performed!</dd>
        <% end %>

        </dl>
        <div class="btn-group btn-group-justified">
          <%= link_to icon('search-plus'), performance, class: "btn btn-primary" %>

          <%#= link_to icon('edit'), edit_performance_url(performance), class: "btn btn-warning" %>

          <%#= link_to icon('trash-o'), performance, method: :delete, data: { confirm: "Do you really want to delete this performance?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        itemSelector: '.isotope-item',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
