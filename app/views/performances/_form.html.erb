<%= simple_form_for(@performance) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :rating %>
    <%= f.input :comment %>
    <%= f.input :completed %>
    <%= f.association :user %>
    <%= f.association :song %>
    <%= f.association :venue %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
