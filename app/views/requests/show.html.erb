<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Request #<%= @request.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
<!--               <dt>Available</dt>
              <dd><%#= @request.available %></dd> -->

              <dt>Performer</dt>
              <dd><%= @request.user.stagename %></dd>

              <dt>Song</dt>
              <dd><%= @request.song.title %> by <%= @request.song.artist %></dd>

              <dt>Venue</dt>
              <dd><%#= current_user.checkin %></dd>
            </dl>


            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), requests_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_request_path(@request), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @request, method: :delete, data: { confirm: "Do you really want to delete this request?" }, class: "btn btn-danger" %>
            </div>


          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
